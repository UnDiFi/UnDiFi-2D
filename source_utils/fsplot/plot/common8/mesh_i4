      INTEGER NPOIN,nBoundaryFaces,NELEM,NFACE,NHOLE,NBELEM,NPNOD
C
C GRID RELATED PARAMETERS
C
      COMMON /mesh_i4/ NPOIN,nBoundaryFaces,NELEM,NFACE,NHOLE,NBELEM,
     +NPNOD
C
C	NPOIN	number of nodes in the mesh
C	nBoundaryFaces:	number of boundary faces in the mesh 
C	NELEM:	number of elements in the mesh
C	NBELEM:	number of boundary elements in the mesh
C	NFACE:	number of faces in the mesh
C	NHOLE:	number of bodies(holes) in the mesh
C
